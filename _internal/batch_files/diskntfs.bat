@echo off
powershell -Command "$drives = Get-Volume | Where-Object { $_.DriveType -eq 'Fixed' }; $non_ntfs_drives = @(); $drive_info = @(); foreach ($drive in $drives) { if ($drive.DriveLetter) { $drive_info += \"$($drive.DriveLetter): $($drive.FileSystemType)\"; if ($drive.FileSystemType -ne 'NTFS') { $non_ntfs_drives += $drive.DriveLetter } } }; if ($non_ntfs_drives.Count -eq 0) { Write-Output '양호'; Write-Output \"현재 상태: $($drive_info -join ', ')로 모든 드라이브가 NTFS로 되어 있습니다.\"} else { Write-Output '미흡'; Write-Output \"현재 상태: NTFS가 아닌 드라이브: $($non_ntfs_drives -join ',')\"; Write-Output \"조치 방법:\"; Write-Output \"1.NTFS가 아닌 드라이브 확인: 시작→디스크관리 입력\"; Write-Output \"2.NTFS로 변경 cmd→ convert 드라이브명: /fs:ntfs 입력\"}"